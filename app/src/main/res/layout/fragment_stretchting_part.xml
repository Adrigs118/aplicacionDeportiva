<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/fondo_setting"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_chest"
        card_view:cardBackgroundColor="@android:color/darker_gray"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:foreground="?selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chest_imageView"
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                card_view:srcCompat="@mipmap/exercise_stretching_sport_icon_133371" />

            <TextView
                android:id="@+id/chest_name"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:text="Estirar los brazos hasta tocar las puntas de los pies."

                android:textAlignment="textStart"
                android:textColor="@color/cardview_light_background"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>